{
  "name": "redenominasi-rupiah",
  "version": "1.0.0",
  "description": "Indonesian Rupiah Redenomination Library - 1:1000 Conversion",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build && npm run test"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "rupiah",
    "redenominasi",
    "redenomination",
    "currency",
    "conversion",
    "indonesian",
    "indonesia",
    "idr",
    "money",
    "finance",
    "react"
  ],
  "author": "ahmatfauzy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmatfauzy/redenominasi-rupiah.git"
  },
  "bugs": {
    "url": "https://github.com/ahmatfauzy/redenominasi-rupiah/issues"
  },
  "homepage": "https://github.com/ahmatfauzy/redenominasi-rupiah#readme",
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": [
    "unrs-resolver"
  ]
}
